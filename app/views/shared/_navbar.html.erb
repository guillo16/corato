      <h5> <%= link_to muebles_path(min_price_cents: 1, max_price_cents: 300001) do %>
        <i class="fas fa-minus"></i> 3.000 $<% end %> </h5>
        <h5><%= link_to "3.000-6.000 $", muebles_path(min_price_cents: 300001, max_price_cents: 600000) %> </h5>
