        <div class="dropdown-content">
          <h5><%= link_to muebles_path(created_at: :desc) do %>Lo mas reciente<% end %></h5>
          <h5>  <%= link_to muebles_path(price_cents: :desc) do %>mas alto - mas bajo<% end %></h5>
        </div>
      </div>
      <div class="dropdown">
        <button class="dropbtn">Encargos <i class="fas fa-angle-down"></i></button>
        <div class="dropdown-content">
          <h5><%= link_to muebles_path do %>Express<% end %></h5>
          <h5><%= link_to muebles_path do %>Cotizacion<% end %></h5>
        </div>
      </div>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
